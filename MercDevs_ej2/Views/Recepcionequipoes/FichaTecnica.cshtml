@model MercDevs_ej2.Models.Recepcionequipo

@{
    ViewData["Title"] = "Ficha Técnica";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        .body1 {
            margin: 20px; /* Ajusta el margen alrededor del cuerpo */
            background-color: #f0f0f0; /* Color de fondo del cuerpo */
        }

        .container1 {
            max-width: 600px; 
            margin: 20px auto; 
            padding: 20px; 
            background-color: #161616;
            border-radius: 20px; 
            color: white;
            box-shadow: 0 0 120px rgba(255, 56, 56, 0.5); 
        }

    

        .table th, .table td {
            padding: 8px; 
            color: white; 
        }

    </style>
</head>
<body class="body1">
    <div class="container1">
        <div class="text-right mb-4">
            <strong>ID:</strong> @Model.Id <br />
            <strong>Fecha: @Model.Fecha</strong> 
        </div>

        <h1 class="text-center mb-4">@ViewData["Title"]</h1>

        <div class="section">
            <div class="section-title">Datos del Usuario</div>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Nombre</th>
                        <td>@Model.IdClienteNavigation.Nombre</td>
                        <th>Apellido</th>
                        <td>@Model.IdClienteNavigation.Apellido</td>
                    </tr>
                    <tr>
                        <th>Celular</th>
                        <td>@Model.IdClienteNavigation.Telefono</td>
                        <th>Correo</th>
                        <td>@Model.IdClienteNavigation.Correo</td>
                    </tr>
                    <tr>
                        <th>Dirección</th>
                        <td colspan="3">@Model.IdClienteNavigation.Direccion</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="section">
            <div class="section-title">Observación del Usuario</div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>N°</th>
                        <th>Descripción</th>
                        <th>Check</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>


        <div class="section">
            <h2>Datos del Hardware</h2>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">Tipo</th>
                        <<td>@Model.TipoPc</td>
                        <th scope="row">Accesorios</th>
                        <td>@Model.Accesorio</td>
                    </tr>
                    <tr>
                        <th scope="row">Marca</th>
                        <td>@Model.MarcaPc</td>
                        <th scope="row">Modelo</th>
                        <td>@Model.ModeloPc</td>
                    </tr>
                    <tr>
                        <th scope="row">S/N</th>
                        <td>@Model.Nserie</td>
                        <th scope="row">CPU</th>
                        <td>@Model.TipoGpu</td>
                    </tr>
                    <tr>
                        <th scope="row">RAM (GB)</th>
                        <td>@Model.CapacidadRam</td>
                       
                        <th scope="row">Almacenamiento</th>
                       <td>@Model.CapacidadAlmacenamiento</td>
                    </tr>
                    <tr>
                        <th scope="row">Tipo GPU</th>
                        <td>@Model.TipoGpu</td>
                        <th scope="row">Tarjeta Gráfica</th>
                        <td>@Model.Grafico</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
   
</body>
</html>
    